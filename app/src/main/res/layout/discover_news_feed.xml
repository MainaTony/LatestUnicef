        <androidx.media3.ui.PlayerView
            android:id="@+id/discoverVideo"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <TextView
            android:id="@+id/discover_feed_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Cholera Kills 8 in Kayunga District"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            >
            <TextView
                android:id="@+id/discover_feed_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02 Aug 2023"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/discover_feed_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/brand_color"
                android:layout_toRightOf="@+id/discover_feed_date"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"
                android:text=" "/>

            <TextView
                android:id="@+id/read_pdf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/discover_feed_url"
                android:textColor="@color/brand_color"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                android:text="View PDF"
                android:textSize="14sp"/>
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
